{
  "name": "@booking-platform-shared/theme",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Shared design system with TypeScript theme objects and automated CSS variables generation",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./dist/variables.css": "./dist/variables.css"
  },
  "files": [
    "dist/",
    "fonts/"
  ],
  "scripts": {
    "build": "tsc --build",
    "dev": "tsc --watch",
    "build:css": "tsx build-css.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "clean": "rm -rf dist node_modules package-lock.json yarn.lock pnpm-lock.yaml",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "eslint": "^9",
    "typescript": "^5.0.0"
  }
}