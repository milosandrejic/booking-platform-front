{
  "name": "@booking-platform-shared/ui",
  "version": "0.1.0",
  "private": true,
  "description": "Shared UI components for the booking platform",
  "type": "module",
  "main": "index.ts",
  "exports": {
    ".": {
      "import": "./index.ts",
      "require": "./index.ts"
    },
    "./button": {
      "import": "./src/Button/index.ts",
      "require": "./src/Button/index.ts"
    },
    "./container": {
      "import": "./src/Container/index.ts",
      "require": "./src/Container/index.ts"
    },
    "./grid": {
      "import": "./src/Grid/index.ts",
      "require": "./src/Grid/index.ts"
    },
    "./typography": {
      "import": "./src/Typography/index.ts",
      "require": "./src/Typography/index.ts"
    },
    "./textfield": {
      "import": "./src/TextField/index.ts",
      "require": "./src/TextField/index.ts"
    },
    "./select": {
      "import": "./src/Select/index.ts",
      "require": "./src/Select/index.ts"
    }
  },
  "scripts": {
    "build": "sass src:dist --no-source-map",
    "build:watch": "sass src:dist --watch --no-source-map",
    "lint": "eslint . && pnpm exec stylelint \"src/**/*.scss\"",
    "lint:fix": "eslint . --fix && pnpm exec stylelint \"src/**/*.scss\" --fix",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "clean": "rm -rf dist node_modules package-lock.json yarn.lock pnpm-lock.yaml",
    "storybook": "storybook dev -p 6006",
    "dev": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@booking-platform-shared/theme": "workspace:*",
    "sass": "^1.89.2"
  },
  "peerDependencies": {
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "eslint": "^9",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.35.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "typescript": "^5.5.0",
    "@types/react": "^18.2.67",
    "@types/react-dom": "^18.2.22",
    "@storybook/react-vite": "^9.1.3",
    "@storybook/addon-links": "^9.1.3",
    "storybook": "^9.1.3",
    "vite": "^6.0.7",
    "stylelint": "^16.10.0",
    "stylelint-config-standard-scss": "^14.0.0",
    "eslint-plugin-storybook": "9.1.3",
    "@storybook/addon-docs": "^9.1.3"
  }
}