{
  "name": "@booking-platform-shared/ui",
  "version": "0.1.0",
  "private": true,
  "description": "Shared UI components for the booking platform",
  "type": "module",
  "main": "index.js",
  "exports": {
    ".": {
      "import": "./index.js",
      "require": "./index.js"
    },
    "./button": {
      "import": "./src/Button/index.js",
      "require": "./src/Button/index.js"
    },
    "./container": {
      "import": "./src/Container/index.js",
      "require": "./src/Container/index.js"
    },
    "./grid": {
      "import": "./src/Grid/index.js",
      "require": "./src/Grid/index.js"
    },
    "./typography": {
      "import": "./src/Typography/index.js",
      "require": "./src/Typography/index.js"
    },
    "./textfield": {
      "import": "./src/TextField/index.js",
      "require": "./src/TextField/index.js"
    },
    "./select": {
      "import": "./src/Select/index.js",
      "require": "./src/Select/index.js"
    },
    "./utils/*": "./src/utils/*"
  },
  "scripts": {
    "build": "sass src:dist --no-source-map",
    "build:watch": "sass src:dist --watch --no-source-map",
    "lint": "eslint . && pnpm exec stylelint \"src/**/*.scss\"",
    "lint:fix": "eslint . --fix && pnpm exec stylelint \"src/**/*.scss\" --fix",
    "clean": "rm -rf dist node_modules package-lock.json yarn.lock pnpm-lock.yaml",
    "storybook": "storybook dev -p 6006",
    "dev": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@booking-platform-shared/theme": "workspace:*",
    "sass": "^1.89.2"
  },
  "peerDependencies": {
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "eslint": "^9",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.35.0",
    "@storybook/react": "^8.4.7",
    "@storybook/react-vite": "^8.4.7",
    "@storybook/blocks": "^8.4.7",
    "@storybook/addon-essentials": "^8.4.7",
    "@storybook/addon-links": "^8.4.7",
    "storybook": "^8.4.7",
    "vite": "^6.0.7",
    "stylelint": "^16.10.0",
    "stylelint-config-standard-scss": "^14.0.0"
  }
}